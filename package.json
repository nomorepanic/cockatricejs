{
  "name": "cockatrice",
  "version": "1.0.0",
  "description": "Cockatrice is a static website manager that integrates the most modern tools in a seamless workflow.",
  "keywords": [
    "static",
    "generator",
    "markdown",
    "pug",
    "coffeescript",
    "sass"
  ],
  "main": "dist/Handler.js",
  "bin": {
    "cockatrice": "bin/cockatrice"
  },
  "scripts": {
    "compile": "coffee --compile --output dist lib",
    "test": "mocha --compilers coffee:coffeescript/register tests/**",
    "lint": "coffeelint lib tests",
    "prepare": "npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vesuvium/cockatricejs.git"
  },
  "author": "Jacopo Cascioli",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/Vesuvium/cockatricejs/issues"
  },
  "homepage": "https://github.com/Vesuvium/cockatricejs#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "coffeelint": "^2.0.7",
    "coffeescript": "^2.1.0",
    "mocha": "^4.0.1",
    "testdouble": "^3.2.7"
  },
  "dependencies": {
    "commander": "^2.12.2",
    "gray-matter": "^3.1.1",
    "highlightjs": "^9.10.0",
    "lodash": "^4.17.4",
    "markdown-it": "^8.4.1",
    "sass": "^1.49.9",
    "pug": "^2.0.0-rc.4",
    "replace": "^0.3.0",
    "toml": "^2.3.3"
  }
}
